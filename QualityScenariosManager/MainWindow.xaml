<Window x:Class="QualityScenariosManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualityScenariosManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1206" WindowStyle="None">
    <Grid>
        <Canvas x:Name="Header" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="1192" Background="#FF327A95" MouseDown="Header_MouseDown">
            <Canvas HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="82" Background="#FF45AE7A">
                <Label Content="QSM" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="78" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" Canvas.Left="4"/>
                <Label x:Name="TitleLabel" Content="Dashboard" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="3" Height="43" Width="606" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" Canvas.Left="116"/>
            </Canvas>
        </Canvas>
        <StackPanel HorizontalAlignment="Left" Height="596" Margin="0,46,0,0" VerticalAlignment="Top" Width="82" Background="#FF327A95">
            <Button x:Name="CreateTSButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Click="CreateTSButton_Click">
                <StackPanel>
                    <Image Source="Icons/AddTS.png" Stretch="Uniform" Height="30" Width="57" Margin="0,0,4,0"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2">
                <StackPanel>
                    <Image Source="Icons/EditTS.png" Stretch="Uniform" Height="30" Width="57" Margin="0,0,7,0"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2">
                <StackPanel>
                    <Image Source="Icons/DeleteTS.png" Height="30" Width="57" Margin="0,0,10,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="34" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" MouseLeftButtonUp="Label_MouseLeftButtonUp" Margin="1158,3,0,0"/>
        <Label Content="_" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="34" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" MouseLeftButtonUp="Label_MouseLeftButtonUp_1" Margin="1119,0,0,0"/>
        <Canvas x:Name="ContentPanel" HorizontalAlignment="Left" Height="596" Margin="82,46,0,0" VerticalAlignment="Top" Width="1110">
            <Canvas x:Name="TSCvs" Height="596" Width="555">
                <DataGrid Height="565" Width="555" Canvas.Top="31"/>
                <Label Content="Test Suites" Height="31" Width="124"/>
            </Canvas>
            <Canvas x:Name="PendingsCvs" Height="596" Canvas.Left="555" Width="555">
                <Canvas x:Name="PRTICvs" Height="298" Width="555">
                    <Label Content="Pending P.R.T.I" Height="31" Width="124"/>
                    <DataGrid Height="267" Width="555" Canvas.Top="31"/>
                </Canvas>
                <Canvas x:Name="ExecCvs" Height="298" Width="555" Canvas.Top="298">
                    <Label Content="Pending Execution" Height="31" Width="124"/>
                    <DataGrid Height="267" Width="555" Canvas.Top="31"/>
                </Canvas>
            </Canvas>
        </Canvas>
    </Grid>
</Window>
