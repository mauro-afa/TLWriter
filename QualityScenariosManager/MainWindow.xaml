<Window x:Class="QualityScenariosManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualityScenariosManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1203" WindowStyle="None">
    <Grid>
        <Canvas x:Name="Header" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="1192" Background="#FF327A95" MouseDown="Header_MouseDown">
            <Canvas HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="82" Background="#FF45AE7A">
                <Label Content="QSM" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="78" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" Canvas.Left="4"/>
                <Label x:Name="TitleLabel" Content="Dashboard" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="3" Height="43" Width="606" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" Canvas.Left="116"/>
            </Canvas>
        </Canvas>
        <StackPanel HorizontalAlignment="Left" Height="596" Margin="0,46,0,0" VerticalAlignment="Top" Width="82" Background="#FF327A95">
            <Button x:Name="HomeButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Click="HomeButton_Click">
                <StackPanel>
                    <Image Source="Icons/Home.ico" Stretch="Uniform" Height="30" Width="57" Margin="0,0,4,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="CreateTSButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Click="CreateTSButton_Click">
                <StackPanel>
                    <Image Source="Icons/AddTS.png" Stretch="Uniform" Height="30" Width="57" Margin="0,0,4,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="EditTSButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Click="EditTSButton_Click">
                <StackPanel>
                    <Image Source="Icons/EditTS.png" Stretch="Uniform" Height="30" Width="57" Margin="0,0,7,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="DeleteTSButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Click="DeleteTSButton_Click">
                <StackPanel>
                    <Image Source="Icons/DeleteTS.png" Height="30" Width="57" Margin="0,0,10,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="ExportTSButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Margin="-6,0,0,0" Click="ExportTSButton_Click">
                <StackPanel>
                    <Image Source="Icons/export.ico" Height="30" Width="40" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                </StackPanel>
            </Button>
            <Button x:Name="SettingsButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="White" Foreground="White" Padding="2" Margin="-6,0,0,0" Click="SettingsButton_Click">
                <StackPanel>
                    <Image Source="Icons/settings.ico" Height="30" Width="40" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="34" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" MouseLeftButtonUp="Label_MouseLeftButtonUp" Margin="1158,3,0,0"/>
        <Label Content="_" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="34" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" MouseLeftButtonUp="Label_MouseLeftButtonUp_1" Margin="1119,0,0,0"/>
        <Canvas x:Name="ContentPanel" HorizontalAlignment="Left" Height="596" Margin="82,46,0,0" VerticalAlignment="Top" Width="1110"/>
    </Grid>
</Window>
